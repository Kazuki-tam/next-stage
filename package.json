{
  "name": "next-stage",
  "description": "A modern, type-safe Next.js starter template designed for AI-driven development",
  "version": "0.1.3",
  "author": "Kazuki Yonemoto (https://dev.to/tim_yone)",
  "license": "MIT",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "bun run lint:markup && bun run lint:biome",
    "lint:markup": "markuplint \"./src/**/*.{jsx,tsx}\"",
    "lint:biome": "biome lint .",
    "format": "biome format . --write",
    "test:unit": "bun test \"**/*.test.ts\"",
    "test:e2e": "bun playwright test",
    "test:e2e:ui": "bun playwright test --ui",
    "test:codegen": "bun playwright codegen",
    "check": "biome check . --write && bun run lint:markup",
    "rules:cursor": "bun run _tasks/copy-rules.ts cursor",
    "rules:windsurf": "bun run _tasks/copy-rules.ts windsurf",
    "rules:copilot": "bun run _tasks/copy-rules.ts copilot",
    "rules": "bun run _tasks/copy-rules.ts cursor && bun run _tasks/copy-rules.ts windsurf && bun run _tasks/copy-rules.ts copilot"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.3",
    "@hookform/resolvers": "^4.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.7.7",
    "lucide-react": "^0.477.0",
    "next": "15.3.1",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@markuplint/jsx-parser": "^4.7.17",
    "@markuplint/react-spec": "^4.5.17",
    "@playwright/test": "^1.51.1",
    "@tailwindcss/postcss": "^4",
    "@types/bun": "^1.2.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "markuplint": "^4.12.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
